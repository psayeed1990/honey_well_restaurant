<%- include("../partials/header") %>
<div class="admin-reservations">

    <div class="search-reservations">
        <form method="POST" action="/admin/reservations">
            <input name="search" type="text" placeholder="Write search term here" required>
            <select required name="searchterm">
                <option disabled selected>FInd Using</option>
                <option value="name">Name</option>
                <option value="email">email</option>
                <option value="phone">Phone</option>
                <option value="date">date</option>
                <option value="hour">hour</option>
                <option value="table">table</option>
            </select>
            <input type="submit" value="Search Reservations">
        </form>


    </div>

<% if(typeof reservations != 'undefined'){ %>
    <h2 class="dash-heading">All The Served Reservations List</h2>
    <% let counter = 1 %>
    <ul class="field-name">
        <li>#:</li>
        <li>Reserved By:</li>
        <li>Phone:</li>
        <li>Email:</li>
        <li>Date:</li>
        <li>Hour:</li>
        <li>Table:</li>
        <li>Status:</li>

    </ul>
    <% reservations.forEach((reservation) => { %>
        <% if(reservation.status == "served"){ %>
    
        <ul class="res-dash">
            <li><%= counter %></li>
    
            <li class="reservations-future"><a href="reservations/<%= reservation.combination %>"><%= reservation.name %></a></li>
            <li class="reservations-future"><%= reservation.phone %></li>
            <li class="reservations-future"><%= reservation.email %></li>
            <li class="reservations-date">
                <%= reservation.combination.split(" ")[0] %>
            </li>
            <li class="reservations-hour">
                <%= reservation.combination.split(" ")[1] %>
            </li>
            <li class="reservations-table">
                <%= reservation.combination.split(" ")[2] %>
            </li>
            <li class="reservations-future"><%= reservation.status %></li>
            
           
            
        </ul>
    
    <% } %>
    <% counter = counter + 1 %> <%}) %> <%} %>
</div>