    <div class="hour-list">
        <ul>
            <% if(typeof hours != 'undefined'){ %> 
                <% hours.forEach((hour) => { %>
                    
                    <p><%= hour.openhour %></p>
                        
                    
                <% }) %> 
            <% } %>
        </ul>
    </div>
</div>
