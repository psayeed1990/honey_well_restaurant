<%- include("../partials/header") %>
<div class="user-btn">
    <h4 class="admin-heading">FInd users by clicking the butons below</h4>
    
    <a href="/admin/users/employee"><button>Employee</button></a>
    <a href="/admin/users/admin"><button>Admin</button></a>
</div>
    


<div class="search-customers">
    <form method="POST" action="/admin/users/customer">
        <input name="search" type="text" placeholder="Write search term here" required>
        <select required name="searchterm">
            <option disabled selected>FInd Using</option>
            <option value="name">Name</option>
            <option value="email">email</option>
            <option value="phone">Phone</option>
            <option value="date">date</option>
            <option value="hour">hour</option>
            <option value="table">table</option>
        </select>
        <input type="submit" value="Search Users">
    </form>


</div>

   <div class="customers">
       <h3 class="admin-heading">Customer's List</h3>
       <ul>
           <li class="admin-list">#:</li>
           <li class="admin-list">Name:</li>
           <li class="admin-list">Phone: </li>
           <li class="admin-list">Email:</li>
           <li class="admin-list">Reservations:</li>
       </ul>
    <% if(typeof users != 'undefined'){ %> 
        <% let counter = 1 %> 
        
        
        <% users.forEach((user) => { %>
            <ul>
            <li class="admin-list"><%= counter %> </li>
            <li class="admin-list"><%= user.name %></li>
            <li class="admin-list"><%= user.phone %></li>
            <li class="admin-list"><%= user.email %></li>
            <li class="admin-list"><form action="/admin/users/customer/reservations" method="POST">
                <input name="email" type="email" hidden value="<%= user.email %>">
                <input type="submit" value="All Reservations">
            </form> </li>
        </ul>
            <% counter += 1 %> 
        <%}) %>
        
    
    <%} %>
</div>