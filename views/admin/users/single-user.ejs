<%- include("../partials/header") %>

<div class="single-user-res">


    <% if(typeof reservations != 'undefined'){ %>
        <h2 class="dash-heading">All The Reservations by this customer</h2>
        <% let counter = 1 %>
        <ul class="field-name">
            <li>#:</li>
            <li>Reserved By:</li>
            <li>Phone:</li>
            <li>Email:</li>
            <li>Date:</li>
            <li>Hour:</li>
            <li>Table:</li>
            <li>Status:</li>
    
        </ul>
        <% reservations.forEach((reservation) => { %>
            
        
            <ul class="res-dash">
                <li><%= counter %></li>
        
                <li class="reservations-future"><%= reservation.name %></li>
                <li class="reservations-future"><%= reservation.phone %></li>
                <li class="reservations-future"><%= reservation.email %></li>
                <li class="reservations-date">
                    <%= reservation.combination.split(" ")[0] %>
                </li>
                <li class="reservations-hour">
                    <%= reservation.combination.split(" ")[1] %>
                </li>
                <li class="reservations-table">
                    <%= reservation.combination.split(" ")[2] %>
                </li>
                <li class="reservations-future"><%= reservation.status %></li>
                
               
                
            </ul>
        
       
        <% counter = counter + 1 %> <%}) %> <%} %>

</div>